.z-menupopup, .z-menupopup > ul.z-menupopup-cnt
{
	background-color: #262626;
	background-image: none;
	border: 0;	
}

.z-menupopup-cnt .z-menu a.z-menu-cnt, 
.z-menupopup-cnt .z-menuitem a.z-menuitem-cnt
{
	font-size: 10pt;
	color: white;
}

.z-menupopup-cnt li.z-menuitem,
.z-menupopup-cnt .z-menu a.z-menu-cnt,
.z-menupopup-cnt .z-menuitem a.z-menuitem-cnt,
.z-menupopup-cnt .z-menuitem-over .z-menu a.z-menu-cnt,
.z-menupopup-cnt .z-menuitem-over a.z-menuitem-cnt
{			
	background-color: #262626;
}

.z-menuitem a:hover
{
	text-decoration: underline !important;	
}

.z-menupopup-cnt .z-menuitem .z-menuitem-cl, .z-menupopup-cnt .z-menu .z-menu-cl,
.z-menupopup-cnt .z-menuitem .z-menuitem-cr, .z-menupopup-cnt .z-menu .z-menu-cr
{
	padding: 0;
}

.z-menupopup-cnt .z-menu .z-menuitem a.z-menu-cnt, .z-menupopup-cnt .z-menuitem a.z-menuitem-cnt
{
	padding: 2px 21px 2px 10px;
}

.z-menupopup .z-menuitem-cnt .z-menuitem-img
{
	display: none;
}

.z-menupopup-cnt .z-menuseparator-inner
{
	left: 0;
	margin-left: 10px;
	margin-right: 10px;
}

/* custom header menu items, 
informational menu items that are not clickable
*/
.header-menuitem a:hover
{
	text-decoration: none !important;	
}

.z-menupopup-cnt .z-menu .header-menuitem a.z-menu-cnt, .z-menupopup-cnt .header-menuitem a.z-menuitem-cnt
{
	padding-bottom: 10px;
	padding-left: 0px;
}

.header-menuitem .z-menuitem-cnt, .header-menuitem a.z-menuitem-cnt {
	font-weight: bold;
	cursor: default;	
}



