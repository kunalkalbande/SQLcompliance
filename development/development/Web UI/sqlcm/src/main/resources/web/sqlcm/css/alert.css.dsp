div.alerts-div {
    background-color: #EBEBEB;
    padding: 0;
    margin: 0 0 20px 0;
}

div.alerts-div .alerts-title {
    background-color: #CCCCCC;
    vertical-align: middle;
    padding: 12px 12px 12px 7px;
}

div.alerts-div .alerts-title .z-label {
    font-weight: bold;
}

div.alerts-div .alerts-empty-msg {
    padding: 0 0 24px 0;
    vertical-align: middle;
    text-align: center
}

div.alerts-div .alerts-empty-msg .z-label {
    font-size: 24px;
    line-height: 24px;
    color: #006600;
    font-weight: bold;
    font-style: italic;
}

div.alerts-div .alerts-title .z-vlayout .z-label {
    /*	display: inline-block;
        width: 48px;
        height: 48px;
        line-height: 24px;
        background-color: #484848;*/
    font-weight: bold;
    text-align: center;
    vertical-align: middle;
}

div.alerts-div .alerts-title .z-label {
    font-size: 12.5pt;
    font-weight: bold;
}

.alerts-subtitle-okay {
    color: #006600;
}

.alerts-subtitle-critical {
    color: #BF1E2D;
}

.alerts-subtitle-warning {
    color: #FFD700;
}

.alerts-subtitle-informational {
    color: #898989;
}

div.alerts-grid.z-grid > .z-grid-header-bg,
div.alerts-grid.z-grid > .z-grid-header > table > tbody > tr.z-columns,
div.alerts-grid.z-grid > .z-grid-header > table > tbody > tr.z-columns > th.z-column {
    border: 0;
    background: transparent;
}

div.alerts-grid > .z-grid-header > table > tbody > tr.z-columns > th.z-column > div.z-column-cnt {
    padding: 0;
}

div.alerts-grid,
div.alerts-grid > .z-grid-body,
div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row > td.z-row-inner,
div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row > .z-cell,
div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-grid-odd {
    border: 0;
    background: transparent;
    vertical-align: middle;
}

div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row > .z-cell:first-child {
    padding: 6px 0;
}

div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row > .z-cell {
    border-bottom: 2px solid #ADADAD;
}

div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row:last-child > .z-cell {
    border-bottom: 0;
}

div.alerts-grid > .z-grid-body > table > tbody.z-rows > tr.z-row > td.z-detail-outer {
    border: 0;
    background: transparent;
}

div.z-grid-footer {
    border: none;
    background: transparent;
}

div.alerts-div .z-a {
    color: #555555;
    text-decoration: none;
    font-weight: normal;
}

div.alerts-div .z-a:hover {
    text-decoration: underline;
}

div.alerts-div .alert-heading.z-a {
    font-weight: bold;
    font-size: 12.5pt;
    color: #363636;
}

.alert-severity-critical {
    background-color: #BF1E2D;
    color: #FFFFFF;
    font-weight: bold;
}

.alert-severity-warning {
    background-color: #FFEB40;
    color: #000000;
    font-weight: bold;
}

.alert-severity-informational {
    background-color: #898989;
    color: #FFFFFF;
    font-weight: bold;
}

.alert-severity-informational > .z-vlayout-inner:nth-child(2) > .z-label,
.alert-severity-warning > .z-vlayout-inner:nth-child(2) > .z-label,
.alert-severity-critical > .z-vlayout-inner:nth-child(2) > .z-label {
    font-size: 16.5pt;
}

.alert-knowledge-base-title {
    color: #636363;
    font-size: 12px;
    font-weight: bold;
}

div.alerts-div div.alert-detail {
    margin: 0 24px 0 0;
}
